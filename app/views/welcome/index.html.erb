<h1> Welcome to Handyman Helper! </h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <div class="login_form">
          <h1>Login</h1>
          <p><%= form_with url: login_path, method: :post do |f| %>
            <%= f.text_field :email, placeholder: "email" %>
            <%= f.password_field :password, placeholder: "password" %>
            <%= f.submit "login", class: "btn btn-success" %>
          <% end %></p>
      </div>
    </div>
    
    <div class="col-sm-4">
      <br><br><br><br>
      <p><%= button_to "sign up", new_customer_path, method: :get, class: "btn btn-info" %></p>
    </div>
  </div>
</div>

</body>
</html>
